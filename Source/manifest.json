{
   "manifest_version": 2,
   "name": "Web Cleaner",
   "options_page": "assets/html/options.html",
   "permissions": [ "http://*/", "https://*/" ],
   "version": "1.0.0",
   "background": {
      "scripts": [ "assets/js/background.js" ]
   },
   "content_scripts": [ {
      "all_frames": true,
      "js": [
         "assets/js/filters.js",
         "assets/js/mutation_summary.js"
      ],
      "matches": [ "<all_urls>" ],
      "run_at": "document_start"
   } ],
   "description": "Filters inappropriate content from the internet.",
   "icons": {
      "128": "assets/img/joseph'slogo2(transparent).png",
      "16": "assets/img/joseph'slogo2(white).png",
      "48": "assets/img/joseph'slogo2(white).png"
   },
   "browser_action": {
      "default_title": "Web Cleaner",      // optional; shown in tooltip
      "default_popup": "assets/html/progress.html"        // optional
   },
   "web_accessible_resources": [
      "assets/css/blockimg.css",
      "assets/js/worker.nude.js",
      "assets/img/joseph'slogo.png",
      "assets/img/joseph'slogo2(transparent).png",
      "assets/img/joseph'slogo2(white).png"
   ]
}
